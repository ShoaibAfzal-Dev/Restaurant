<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-black">
        <nav style="padding-left:100px;padding-right:100px;height:80px"  class="justify-content-center navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark ">
            <div  class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="width:150px" src="~/images/logo.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start">
                    <ul class="navbar-nav flex-grow-1" style="display:flex;justify-content:start;align-items:start">
                        @if (Context.Session.GetString("Roles") == "Admin")
                              {
                            <li class="nav-item text-white">
                                <a class="text-white"
                                href="~/Data/index"
                            >Manage</a></li>
                              }
                    </ul>
                        </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="display:flex;justify-content:end;align-items:end">
                        @if (Context.Session.GetString("sub") !=null)
                        {
                         <li class="nav-item " style="padding:7px;color:brown">
                             Hello
                             @Context.Session.GetString("sub")
                         </li>
                     
                         <li class="nav-item">
                         <a href="~/Account/Logout" class="nav-link text-white">Logout</a>
                         </li>
                            
                        }
                        else{
                        <li class="nav-item dark">
                    
                                <a href="~/Account/register" class="nav-link text-white">Register</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-white" href="~/Account/Login">Login</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
            @RenderBody()
    </div>

    <footer style="background-color:black;height:70px" >
        <div class="container bg-black" style="width:80%;text-align:end;
         display:flex;justify-content:end;align-items:center
          ">
            <img src="~/images//icons8-facebook-60.png"/>
            <img src="~/images//icons8-instagram-50.png" />
      </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model Order_Types;

<div class="container mt-5 text-white">
    <h2 class="text-white">Edit Sub_Order</h2>
    <p>@ViewBag.Error</p>
    <form method="post" asp-action="SaveEditSubOrder">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" id="Id" name="Id" value="@Model.Id">
        <input type="hidden" id="Orderid" name="Orderid" value="@ViewBag.main">

        <div class="form-group">
            <label class="p-1" for="Name">Name</label>
            <input type="text" class="form-control" id="Name" 
            name="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label class="p-1" for="PlusPrice">PlusPrice</label>
            <input type="number" class="form-control" id="PlusPrice" 
            name="PlusPrice" value="@Model.PlusPrice">
        </div>
        <div class="form-group">
            <label class="p-1" for="Count">Count</label>
            <input type="number" class="form-control" id="Count" 
            name="Count" value="@Model.Count">
        </div>
        <button type="submit" class="btn btn-danger btn-sm ms-lg-2">Save Changes</button>
    </form>
</div>